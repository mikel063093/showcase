<script type="text/javascript">
	$('#form-registro').validate({
        rules: {
            'usuario[nombres]': {  required: true },
            'usuario[apellidos]': {  required: true },
            'usuario[correo]': {  required: true, email:true },
            'usuario[password][first]': {  required: true },
            'usuario[password][second]': {  required: true, equalTo: "#usuario_password_first" }
        },
        messages:{
        	'usuario[nombres]': {  required: 'El campo Nombres es obligatorio' },
            'usuario[apellidos]': {  required: 'El campo Apellidos es obligatorio' },
            'usuario[correo]': {  required: 'El campo Correo es obligatorio', email: 'El campo correo no tiene un formato valido' },
            'usuario[password][first]': {  required: 'El campo Contraseña es obligatorio' },
            'usuario[password][second]': {  required: 'El campo Confirmar Contraseña es obligatorio', equalTo: 'Los campos Contraseña y Confirmar Contraseña deben ser iguales' }
        },
        submitHandler: function(form) {
           enviar(form);
        },
        showErrors: function(errorMap, errorList) {
            if (errorList.length > 0) {
            }
        },
        invalidHandler: function(event, validator) {
            if (validator.errorList.length > 0) {
            	for (var i = 0; i < validator.errorList.length; i++) {
            		mostrarMensaje(validator.errorList[i].message,'Error');
            	};
                return false;
            }
        },
        errorPlacement: function(error, element) {
            return false;
        }
    });

     function enviar(form){
     	$('#modal-cargando').modal('show');
        var datos = $('#form-registro').serialize();
        $.ajax({
            url:"{{path('guardarUsuario')}}",
            type: 'post',
            dataType: 'json',
            data: datos,
            success: function (data){
                if(data.valor){
                	$.ajax({
			            type: "POST",
			            url: '{{path("registrosUsuarios")}}',
			            dataType: "html",
			            
			            success: function(data) {
			                $('#registros').html(data);
			            }
			        });
                 	$('#btn-guardar').unbind();
                	$('#modal').modal('hide');
                    $('#modal-title').html('');
					$('#modal-content').html('<br>CARGANDO . . .');
					$('#modal-footer').html('');
					mostrarMensaje(data.mensaje,'Exito');         
                }else{
                	mostrarMensaje(data.mensaje,'Error');
                }

                $('#modal-cargando').modal('hide');
            }

        });

    }


</script>

{{ form_start(form, {'attr': {'id': 'form-registro','class':'form-horizontal style-form' }}) }}
