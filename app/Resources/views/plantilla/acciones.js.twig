<script>
$(document).ready(function() {
    setVerMas();

	$("#menu-categoria a").click(function (e) {
        e.preventDefault();
        var id = $(this).attr('value');
        $.ajax({
            type: "GET",
            url: "{{ path('establecimientosCategoria') }}/"+id,
            dataType: "html",
            success: function(data) {
                $("#item-establecimientos").parent().children().removeClass('active');
                $("#item-establecimientos").addClass('active');
                $(this).parent().parent().children().removeClass('activo');
                $(this).addClass('activo');
                $("#carrusel").cycle('stop');
                $('#home').html(data);
            },
        });
    });


});

    function setVerMas(){
    $(".establecimientos a").click(function(e){
        e.preventDefault();
        var id = $(this).attr('value');
        $.ajax({
            type: "GET",
            url: "{{ path('establecimiento') }}/"+id,
            dataType: "html",
            success: function(data) {
                var divContenerdor = $(".home");
                divContenerdor.removeClass('home');
                divContenerdor.addClass('vistaEstable');
                $('#home').html(data);
            },
        });
    });
}
</script>