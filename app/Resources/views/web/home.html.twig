{% extends "plantilla/landing.html.twig" %}
{% block contenidoWeb %}
<div id="carrusel">
    {% for promocion in promociones %}
    <img src="{{ asset(promocion.webPath) }}" alt="promocion">
    {% endfor %}
    <div class="cycle-pager"></div>
</div>
<div class="contenedor destacados">
    {% if mostrar %}
    <h2>Establecimientos destacados<a id="masEstablecimientos" href="#">VER MÁS DESTACADOS</a></h2>
        {% endif %}
    <ul class="lista establecimientos">
        {% for establecimiento in establecimientosDestacados %}
        <li>
            <img src="{{ asset(establecimiento.webPath) }}" alt="{{ establecimiento.nombre }}" />
            <h3>{{ establecimiento.nombre }}</h3>
            <a href="#" value="{{ establecimiento.slug }}">Ver más</a>
        </li>
        {% endfor %}
    </ul>
</div>
<div class="contenedor destacados">
    {% set carrito = app.session.get('carrito') %}
    {% if mostrar %}
    <h2>Artículos destacados <a id="masArticulos" href="#" >VER MÁS ARTÍCULOS</a> </h2>
    {% endif %}
    <ul class="lista articulos">
        {% for articulo in articulosDestacados %}
        <li>
            {% if articulo.fotosArticulos|length >0 %}
            <img src="{{ asset(articulo.fotosArticulos[0].webPath) }}" alt="{{ articulo.nombre }}" data-id="{{ articulo.id }}"/>
            {% else %}
            <img src="" alt="{{ articulo.nombre }}" data-id="{{ articulo.id }}"/>
            {% endif %}
            <div class="informacion">
                <h3>{{ articulo.nombre }}</h3>
                <h4>{{ articulo.precio|number_format(0,',','.') }}</h4>
                <span>{{ articulo.unidadMedida~' '~articulo.valorMedida }}</span><br />
                <span id="unidades">{{ articulo.cantidad }} unidades</span>
            </div>
            <div class="contador">
                <a class="menos" href="#" value="{{ articulo.id }}">Menos</a>
                <span class="cantidad" id="cantidadArticulo">

                {% if carrito.items|length == 0 %}
                0
                {% else %}
                    {% set break = false %}
                    {% for item in carrito.items if not break %}
                        {% if item.articulo == articulo.id %}
                            {{ item.cantidad }}
                            {% set break = true %}
                        {% endif %}
                    {% endfor %}
                    {% if not break %}
                        0
                    {% endif %}
                {% endif %}

                </span>
                <a class="mas" href="#" value="{{ articulo.id }}">Mas</a>
            </div>
        </li>
        {% endfor %}
    </ul>
</div>
{% endblock %}